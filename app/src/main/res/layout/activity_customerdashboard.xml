<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ColorPrimary"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_marginTop="@dimen/margin_40dp"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <LinearLayout
                        android:id="@+id/salesOrderLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.499"
                        android:background="@drawable/rectangle_grey"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:src="@drawable/dashboard_icon_saleorder" />

                        <com.fieldmax.android.fieldmaxv2.view.FieldMaxTextView
                            style="@style/DashBoardText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/margin_10dp"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:text="@string/salesOrder"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/textSize_20sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:layout_weight="0.001" />


                    <LinearLayout
                        android:id="@+id/paymentLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.499"
                        android:background="@drawable/rectangle_grey"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:src="@drawable/dashboard_icon_payment" />

                        <com.fieldmax.android.fieldmaxv2.view.FieldMaxTextView
                            style="@style/DashBoardText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/margin_10dp"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:text="@string/payment"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/textSize_20sp" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp" />

                <LinearLayout

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/pocketMISLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:layout_weight="0.499"
                        android:background="@drawable/rectangle_grey"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:src="@drawable/dashboard_icon_pocketmis" />

                        <com.fieldmax.android.fieldmaxv2.view.FieldMaxTextView
                            style="@style/DashBoardText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/margin_10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/pocketMIS"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:layout_weight="0.001" />


                    <LinearLayout
                        android:id="@+id/competitorsLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:layout_weight="0.499"
                        android:background="@drawable/rectangle_grey"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:src="@drawable/dashboard_icon_competitors" />

                        <com.fieldmax.android.fieldmaxv2.view.FieldMaxTextView
                            style="@style/DashBoardText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/margin_10dp"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:text="@string/competitors"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/textSize_20sp" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp" />

                <LinearLayout

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <LinearLayout
                        android:id="@+id/enquiryLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:layout_weight="0.499"
                        android:background="@drawable/rectangle_grey"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:src="@drawable/dashboard_icon_enquiry" />

                        <com.fieldmax.android.fieldmaxv2.view.FieldMaxTextView
                            style="@style/DashBoardText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/margin_10dp"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:text="@string/enquiry"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/textSize_20sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:layout_weight="0.001" />


                    <LinearLayout
                        android:id="@+id/complaintsLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:layout_weight="0.499"
                        android:background="@drawable/rectangle_grey"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:src="@drawable/dashboard_icon_complain" />

                        <com.fieldmax.android.fieldmaxv2.view.FieldMaxTextView
                            style="@style/DashBoardText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/margin_10dp"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:text="@string/complaints"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/textSize_20sp" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <include
        layout="@layout/footer_main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


</RelativeLayout>